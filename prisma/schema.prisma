generator client {
  provider = "prisma-client"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model Payment {
  id                  String   @id @default(uuid())
  name                String
  paidAmount          Float    @default(0)
  totalAmountPerPerson Float
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@map("payments")
}
