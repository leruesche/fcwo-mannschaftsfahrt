{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "rebaseWhen": "never",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "pr",
    "schedule": [
      "after 9pm on monday"
    ]
  },
  "baseBranchPatterns": [
    "develop"
  ],
  "packageRules": [
    {
      "groupName": "{{manager}}",
      "schedule": [
        "after 9pm on monday"
      ],
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "matchManagers": ["npm"],
      "rangeStrategy": "bump"
    }
  ]
}
